%div.row-fluid.border.text-color-violet
  %div.span6.main
    %div.header-label.well.well-large
      Contact Us
    = form_for :user, html: { class: 'form-horizontal' } do |f|
      %div.control-group
        = f.label :name, 'Name', class: 'control-label'
        %div.controls
          = f.text_field :name
      %div.control-group
        = f.label :email, class: 'control-label'
        %div.controls
          = f.text_field :email
      %div.control-group
        = f.label :message, class: 'control-label'
        %div.controls
          = f.text_area :address, rows: 3
      %div.control-group
        %div.controls
          = f.submit 'Submit', class: 'btn btn-primary'