<!DOCTYPE html>
<html>
<head>
  <title>Swingin</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <link href='http://fonts.googleapis.com/css?family=Balthazar' rel='stylesheet' type='text/css'>
  <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
  <div class = 'social-icons'>
    <div class = 'facebook-icon label label-default'>
        <i class="fa fa-facebook fa-3"></i> facebook
    </div>
  </div>
  <div class="container-fluid menu">
    <div class="navbar navbar-default margin noBottom " role="navigation">
      <a class="brand img-responsive pull-right" href="#">
        Swing IN
      </a>

      <div class="navbar-inner menu" >
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <div class="nav-collapse">
            <ul class="nav navbar-nav menuitem pull-right">
              <li><%= link_to root_path do %>
                <i class="fa fa-home"></i><br>Home
                <%end%>
              </li>
              <li><%= link_to page_path('how_app_works') do %>
                <i class="fa fa-road"></i> <br>How App Works
                <%end%>
              </li>
              <li><%= link_to page_path('advertisers') do %>
                <i class = "fa fa-smile-o" ></i><br>Advertisers
                <%end%>
              </li>
              <li><%= link_to page_path('contact') do%>
                <i class="fa fa-envelope-o"></i><br>Contact Us
                <%end%>
              </li>
              <li><%= link_to page_path('about') do %>
                <i class = "fa fa-info" ></i><br>About
                <%end%>
              </li>
            </ul>
          </div>
      </div>
    </div>
  </div>
  <div class="container-fluid">
    <%= yield %>
    <div class="footer bottom">
      <div class = "span2">
        <p>&copy; 2013 
          <%= link_to 'Swing IN' %>
        </p>
      </div>
       <div class = "span6 footer-links">
          <%= link_to 'home', root_path %> |
          <%= link_to 'advertisers', page_path('advertisers') %> |
          <%= link_to 'contact us', page_path('contact') %> |
          <%= link_to 'about the app', page_path('about') %>
      </div>
    </div>
  </div>
</body>
</html>